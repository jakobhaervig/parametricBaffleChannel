FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createBafflesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

internalFacesOnly true;

// Baffles to create.
baffles
{
    baffleFaces
    {
        // Mandatory: type must be 'internalBaffle'
        type faceZone;

        // Name of the faceZone created by snappyHexMesh
        zoneName baffleZone;

        patchPairs
        {
            master
            {
                //- Master side patch
                name            baffleMaster;
                type            wall;
            }
            slave
            {
                //- Slave side patch
                name            baffleSlave;
                type            wall;
            }
        }
    }

}