FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0;
    }

    outlet
    {
        type            zeroGradient;
    }

    heated_walls
    {
        type            fixedValue;
        value           uniform 100;
    }

    upstream_walls
    {
        type            zeroGradient;
    }

    downstream_walls
    {
        type            zeroGradient;
    }

    baffles
    {
        type            zeroGradient;
    }

}


